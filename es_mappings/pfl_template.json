{
    "template": "pfl_*",
    "settings": {
        "index": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "query": {
                "default_field": "all_text"
            },
            "analysis": {
                "analyzer": {
                    "default": {
                      "type": "dutch"
                    },
                    "text_nl": {
                        "type": "custom",
                        "filter": [
                            "asciifolding",
                            "lowercase",
                            "custom_word_delimiter"
                        ],
                        "tokenizer": "standard"
                    }
                },
                "filter": {
                    "custom_word_delimiter": {
                        "type": "word_delimiter",
                        "split_on_numerics": false,
                        "generate_number_parts": true,
                        "preserve_original": true,
                        "stem_english_possesive": false,
                        "catenate_words": false,
                        "catenate_numbers": true,
                        "split_on_case_change": false,
                        "generate_word_parts": true
                    }
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false
            },
            "dynamic_templates": [
                {
                    "original_object_urls": {
                        "path_match": "meta.original_object_urls.*",
                        "mapping": {
                            "type": "keyword",
                            "index": "false"
                        }
                    }
                }
            ],
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "source_id": {
                            "type": "keyword"
                        },
                        "collection": {
                            "type": "keyword"
                        },
                        "original_object_id": {
                            "type": "keyword"
                        },
                        "rights": {
                            "type": "keyword"
                        },
                        "original_object_urls": {
                            "type": "object"
                        },
                        "processing_started": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        },
                        "processing_finished": {
                            "type": "date",
                            "format": "dateOptionalTime"
                        }
                    }
                },
                "all_text": {
                    "type": "text",
                    "analyzer": "text_nl"
                },
                "title": {
                    "type": "text",
                    "analyzer": "text_nl",
                    "fielddata": true
                },
                "description": {
                    "type": "text",
                    "analyzer": "text_nl",
                    "fielddata": true
                },
                "date": {
                    "type": "date",
                    "format": "dateOptionalTime"
                },
                "location": {
                  "type": "keyword"
                },
                "source": {
                  "type": "keyword"
                },
                "type": {
                  "type": "keyword"
                },
                "persons": {
                  "type": "keyword"
                },
                "parties": {
                  "type": "keyword"
                },
                "media_urls": {
                    "properties": {
                        "url": {
                            "type": "keyword",
                            "index": "false",
                            "copy_to": "media_url"
                        },
                        "original_url": {
                            "type": "keyword",
                            "index": "false",
                            "copy_to": "media_url"
                        },
                        "width": {
                            "type": "integer",
                            "copy_to": "media_url"
                        },
                        "height": {
                            "type": "integer",
                            "copy_to": "media_url"
                        },
                        "content_type": {
                            "type": "keyword",
                            "copy_to": "media_url"
                        },
                        "text": {
                          "type" : "text",
                          "analyzer": "text_nl",
                          "fielddata": true,
                          "copy_to": "media_url"
                        },
                        "label": {
                          "type" : "text",
                          "analyzer": "text_nl",
                          "copy_to": "media_url"
                        }
                    }
                },
                "enrichments": {
                    "type": "object",
                    "properties": {
                        "media_urls": {
                            "properties": {
                                "url": {
                                    "type": "keyword",
                                    "index": "false"
                                },
                                "original_url": {
                                    "type": "keyword",
                                    "index": "false"
                                },
                                "media_type": {
                                    "type": "keyword"
                                },
                                "content_type": {
                                    "type": "keyword"
                                },
                                "size_in_bytes": {
                                    "type": "integer"
                                },
                                "resolution": {
                                    "type": "object",
                                    "properties": {
                                        "width": {
                                            "type": "integer"
                                        },
                                        "height": {
                                            "type": "integer"
                                        },
                                        "total_pixels": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                "image_format": {
                                    "type": "keyword"
                                },
                                "image_mode": {
                                    "type": "keyword"
                                },
                                "text": {
                                  "type" : "text",
                                  "analyzer": "text_nl",
                                  "fielddata": true,
                                  "copy_to": "media_url"
                                },
                                "label": {
                                  "type" : "text",
                                  "analyzer": "text_nl",
                                  "copy_to": "media_url"
                                }
                            }
                        }
                    }
                },
                "source_data": {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "text",
                            "index": "false",
                            "doc_values": "false"
                        },
                        "content_type": {
                            "type": "keyword"
                        }
                    }
                },
                "combined_index_data": {
                    "type": "text",
                    "index": "false",
                    "doc_values": "false"
                }
            }
        }
    }
}
